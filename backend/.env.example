# Database
DATABASE_URL=postgresql+asyncpg://aicrm:aicrm_dev_password@localhost:5432/aicrm

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
TRUSTED_PROXIES=["127.0.0.1", "::1"]

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_TIMEOUT=60

# Telnyx
TELNYX_API_KEY=KEY-your-telnyx-key
TELNYX_WEBHOOK_SECRET=your-webhook-secret
TELNYX_PUBLIC_KEY=your-telnyx-public-key
SKIP_WEBHOOK_VERIFICATION=false
TELNYX_CONNECTION_ID=your-connection-id
TELNYX_APP_ID=your-app-id

# Cal.com
CALCOM_API_KEY=cal_live_your-calcom-key
CALCOM_WEBHOOK_SECRET=your-calcom-webhook-secret

# ElevenLabs (optional, for custom voices)
ELEVENLABS_API_KEY=your-elevenlabs-key

# xAI (Grok)
XAI_API_KEY=xai-your-grok-key

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@example.com
SENDGRID_FROM_NAME=AI CRM

# Google Places API
GOOGLE_PLACES_API_KEY=your-google-places-key

# App
DEBUG=true
CORS_ORIGINS=["http://localhost:3000"]
API_BASE_URL=https://api.example.com
FRONTEND_URL=http://localhost:3000

# Workers
CAMPAIGN_POLL_INTERVAL=5
AI_RESPONSE_DELAY_MS=2000

# Enrichment
ENABLE_AI_ENRICHMENT=true

# Demo landing page
DEMO_WORKSPACE_ID=your-demo-workspace-uuid
DEMO_AGENT_ID=your-demo-agent-uuid
DEMO_FROM_PHONE_NUMBER=+15551234567
DEMO_IP_RATE_LIMIT=100
DEMO_PHONE_RATE_LIMIT=100
